<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:gravity="center"
        tools:context=".LoginFragment">


        <TextView
            android:id="@+id/signupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Sign up" />

        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Create an account to start chatting with your friends and family" />

        <LinearLayout
            android:id="@+id/signup_with_google"
            android:background="@drawable/signup_with_google_button"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="Sign up with google"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="or signup using email" />

        <EditText
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/custom_input"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_outline_email_24"
            android:hint="Email" />
        <EditText
            android:layout_marginBottom="30dp"
            android:id="@+id/editTextTextPersonNames"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/custom_input"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_outline_lock_24"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Continue" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Already have an account? Sign in" />

    </LinearLayout>

</layout>